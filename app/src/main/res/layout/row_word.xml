<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_size"
    android:orientation="horizontal"
    android:id="@+id/root_view">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:src="@mipmap/ic_launcher"
        android:background="@color/tan_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/word_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tv_miwok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/right_edge"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                tools:text="lutti" />

            <TextView
                android:id="@+id/tv_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/right_edge"
                android:layout_weight="1"
                android:gravity="top"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="one" />

        </LinearLayout>

    <ImageView
        android:id="@+id/img_play"
        android:layout_width="@dimen/play_image_size"
        android:layout_height="@dimen/play_image_size"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/baseline_play_arrow_white_24"/>

    </RelativeLayout>

</LinearLayout>